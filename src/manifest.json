{
    "name": "ProtonDB for Steam",
    "description": "Adds the ProtonDB rating to games in the Steam store so you get an idea of how it will run before you buy it!",
    "version": "0.5",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "options/options.html"
    },
    "icons": {
      "16": "/icons/get_started16.png",
      "32": "/icons/get_started32.png",
      "48": "/icons/get_started48.png",
      "128": "/icons/get_started128.png"
    }
}